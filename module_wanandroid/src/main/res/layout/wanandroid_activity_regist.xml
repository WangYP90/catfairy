<?xml version="1.0" encoding="utf-8"?>
<com.kennyc.view.MultiStateView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/msv"
    style="@style/base_StateView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/wanandroid_main_color"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="注册"
        app:titleTextColor="@color/base_white_text"
        tools:ignore="MissingConstraints" />
    <TextView
        android:text="注册用户"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/base_black_333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="用户注册后才可以登陆！"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/base_black_999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:errorTextAppearance="@style/wanandroid_EditTextErrorAppearance">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名"
            android:imeOptions="actionGo"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:textColor="@color/base_white_text" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        app:errorTextAppearance="@style/wanandroid_EditTextErrorAppearance">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:imeOptions="actionGo"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:textColor="@color/base_white_text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout_rePwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        app:errorTextAppearance="@style/wanandroid_EditTextErrorAppearance">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_rePwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="再输入一次密码"
            android:imeOptions="actionGo"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:textColor="@color/base_white_text" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_regist"
        android:text="注册"
        android:gravity="center"
        android:textColor="@color/base_white_text"
        android:textSize="14sp"
        android:background="@color/wanandroid_main_color"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"/>
    <TextView
        android:id="@+id/tv_login"
        android:textColor="@color/base_black_999"
        android:textSize="16sp"
        android:text="已有账户，去登陆"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
</com.kennyc.view.MultiStateView>