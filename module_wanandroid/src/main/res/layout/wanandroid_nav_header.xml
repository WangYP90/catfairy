<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="?attr/colorPrimary">

    <ImageView
        android:id="@+id/iv_nav_login_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_nav_coin"
        android:src="@drawable/base_avatar_default"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>


    <ImageView
        android:id="@+id/iv_nav_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/base_avatar_default"
        />

    <TextView
        android:id="@+id/tv_nav_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_nav_avatar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/base_white_text"
        android:textSize="18sp"
        tools:text="Tony Green"
        />
    <TextView
        android:id="@+id/tv_nav_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_nav_nickname"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:textColor="@color/base_white_text"
        android:textSize="12sp"
        tools:text="@string/wanandroid_user_id"
        />
    <TextView
        android:id="@+id/tv_nav_levle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_nav_id"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:textColor="@color/base_white_text"
        android:textSize="12sp"
        tools:text="Tony Green"
        />
</RelativeLayout>
