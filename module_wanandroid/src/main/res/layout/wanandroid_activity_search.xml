<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".module.search.SearchActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:elevation="4dp"
        app:title=""
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/base_white_text"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/base_ToolbarPopupTheme"/>

        <include layout="@layout/wanandroid_search_ready_view"/>

        <com.tj24.wanandroid.common.view.ArticleListView
            android:id="@+id/articleListView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>