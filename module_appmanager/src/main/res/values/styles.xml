<resources>
    <style name="App_SearchActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/app_scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/app_SearchWindowAnimations</item>
    </style>

    <style name="app_SearchWindowAnimations">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/app_fade_out_rapidly</item>
    </style>

    <style name="App_SplashActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/base_colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="app_EditTextErrorAppearance">
        <item name="android:textColor">@color/base_white_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="App_RegisterActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/app_white_text</item>
        <item name="android:textColor">@color/app_white_text</item>
        <item name="android:textColorHint">@color/app_white_text</item>
        <item name="colorControlNormal">@color/app_white_text</item>
        <item name="colorControlHighlight">@color/app_white_text</item>
    </style>

    <style name="App_LoginActivity" parent="App_RegisterActivity">

    </style>
</resources>
